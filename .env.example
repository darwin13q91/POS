# Environment Variables Template
# Copy this to .env.local and customize for your deployment

# Application Info
VITE_APP_NAME=Your POS System Name
VITE_APP_VERSION=1.2.0
VITE_COMPANY_NAME=Your Company Name
VITE_SUPPORT_EMAIL=support@yourcompany.com
VITE_COMPANY_WEBSITE=https://yourcompany.com

# PWA Settings
VITE_PWA_NAME=Your POS System
VITE_PWA_SHORT_NAME=POS
VITE_PWA_DESCRIPTION=Your POS system description
VITE_PWA_THEME_COLOR=#1f2937
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Feature Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_FEATURE_LOYALTY_PROGRAM=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_MULTI_USER=true
VITE_FEATURE_BACKUP_RESTORE=true
VITE_FEATURE_RECEIPT_GENERATION=true

# URLs (optional)
VITE_PRIVACY_POLICY_URL=https://yourcompany.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://yourcompany.com/terms

# Development
NODE_ENV=development
